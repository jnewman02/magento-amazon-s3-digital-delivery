<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Meanbee_DigitalDelivery>
            <version>1.0.0</version>
        </Meanbee_DigitalDelivery>
    </modules>
    <global>
        <models>
            <mbdd>
                <class>Meanbee_DigitalDelivery_Model</class>
            </mbdd>
            <downloadable>
                <rewrite>
                    <link_purchased_item>Meanbee_DigitalDelivery_Model_Link_Purchased_Item</link_purchased_item>
                </rewrite>
            </downloadable>
        </models>
        <blocks>
            <mbdd>
                <class>Meanbee_DigitalDelivery_Block</class>
            </mbdd>
        </blocks>
        <helpers>
            <mbdd>
                <class>Meanbee_DigitalDelivery_Helper</class>
            </mbdd>
        </helpers>
        <events>
            <downloadable_link_purchased_item_load_after>
                <observers>
                    <meanbee_digitaldelivery_modify_url>
                        <type>singleton</type>
                        <class>mbdd/observer</class>
                        <method>observeLoad</method>
                    </meanbee_digitaldelivery_modify_url>
                </observers>
            </downloadable_link_purchased_item_load_after>
        </events>
        <rewrite>
            <mbdd_download>
                <from><![CDATA[#^/downloadable/download/link/#]]></from>
                <to>/mbdd/download/link/</to>
            </mbdd_download>
        </rewrite>
    </global>
    <frontend>
        <routers>
            <mbdd_download>
                <use>standard</use>
                <args>
                    <module>Meanbee_DigitalDelivery</module>
                    <frontName>mbdd</frontName>
                </args>
            </mbdd_download>
        </routers>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <mbdd>
                                            <title>Meanbee Digital Delivery Settings</title>
                                        </mbdd>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <mbdd>
                    <file>meanbee/digitaldelivery.xml</file>
                </mbdd>
            </updates>
        </layout>
    </adminhtml>
</config>
